class Solution:
    def numberOfSteps(self, num: int) -> int:
        sum = 0
        while num != 0:
            if num % 2 == 0:
                num = num / 2
                sum = sum + 1

            else:
                num = (num-1)
                sum = sum + 1
                if num == 0:
                    break
                num = num / 2
                sum = sum + 1
            
        
        return sum
